<%= form_for(:reading, url: weathers_path) do |f| %>
  Location: <%= f.text_field :address %><br />
  Scale: <%= f.radio_button :temp_scale, WeatherService::FAHRENHEIT_SCALE %> &deg;F
  <%= f.radio_button :temp_scale, WeatherService::CELSIUS_SCALE %> &deg;C
  <br />
  <%=
    f.button do
      content_tag(:strong, "Get the temp")
    end
  %>
<% end %>
